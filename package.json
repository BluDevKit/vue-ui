{
    "name": "@bludevkit/vue-ui",
    "version": "0.0.2",
    "author": {
        "name": "Ymaro Blue",
        "email": "coding.ymaro@gmail.com"
    },
    "description": "Blu Dev Kit is a UI library made with Vue 3 and Tailwindcss",
    "keywords": [
        "vue",
        "vue3",
        "vuejs",
        "Nuxt",
        "Nuxt3",
        "component",
        "library",
        "vue-components",
        "ui",
        "tailwind",
        "tailwindcss",
        "typescript"
    ],
    "type": "module",
    "types": "./index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/blu-dev-kit.js"
        },
        "./utils": {
            "import": "./dist/utils.js"
        }
    },
    "files": [
        "dist",
        "index.d.ts",
        "utils.d.ts"
    ],
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BluDevKit/vue-ui.git"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run lint && vue-tsc --noEmit && vite build",
        "build:all": "npm run build && npm run storybook:build",
        "preview": "vite preview",
        "storybook": "npm run lint && storybook dev --no-open -p 6006",
        "storybook:serve-build": "npx http-server .storybook/build",
        "storybook:build": "storybook build -o .storybook/build",
        "storybook:build:dist": "npm run storybook:build && xcopy /Y .storybook\\build dist\\storybook",
        "storybook:build:serve": "npm run storybook:build && npm run storybook:serve-build",
        "release": "standard-version && git push --follow-tags && npm publish",
        "test": "echo \"Error: no test specified\"",
        "lint": "eslint --ext .ts,.vue src",
        "lint:fix": "npm run lint -- --fix"
    },
    "peerDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@vueuse/core": "^10.8.0",
        "pinia": "^2.1.7",
        "tailwindcss": "^3.4.1",
        "vue": "^3.4.15"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^8.0.4",
        "@storybook/addon-interactions": "^8.0.4",
        "@storybook/addon-links": "^8.0.4",
        "@storybook/addon-onboarding": "^8.0.4",
        "@storybook/addon-themes": "^8.0.4",
        "@storybook/blocks": "^8.0.4",
        "@storybook/test": "^8.0.4",
        "@storybook/vue3": "^8.0.4",
        "@storybook/vue3-vite": "^8.0.4",
        "@types/node": "^20.11.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vitejs/plugin-vue": "^5.0.3",
        "@vue/test-utils": "^2.4.4",
        "autoprefixer": "^10.4.17",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier-vue": "^5.0.0",
        "eslint-plugin-vue": "^9.23.0",
        "http-server": "^14.1.1",
        "postcss": "^8.4.35",
        "postcss-cli": "^11.0.0",
        "prettier": "^3.2.5",
        "sass": "^1.71.0",
        "standard-version": "^9.5.0",
        "storybook": "^8.0.4",
        "tailwind-merge": "^2.2.1",
        "typescript": "^5.2.2",
        "vite": "^5.1.0",
        "vite-plugin-css-injected-by-js": "^3.4.0",
        "vite-plugin-dts": "^3.7.2",
        "vite-plugin-lib-inject-css": "^1.3.0",
        "vitest": "^1.3.1",
        "vue-tsc": "^1.8.27"
    }
}