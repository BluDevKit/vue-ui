{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2022",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "vite/client"
        ],
        "paths": {
            "@/composables/*": [
                "./src/composables/*"
            ]
        },
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": [
        "./**.ts",
        "./helpers/**.ts",
    ]
}